{
  "name": "lanmei-exif-tools",
  "version": "1.0.0",
  "description": "Lanmei EXIF Tools Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "User",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lanmei.exiftools",
    "productName": "Lanmei EXIF Tools",
    "directories": {
      "output": "dist_v2"
    },
    "files": [
      "electron/**/*",
      "frontend/out/**/*"
    ],
    "extraResources": [
      {
        "from": "backend_dist/api.exe",
        "to": "api.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "frontend/app/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
